<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
</head>
    <body>
        <h1>The Game Database</h1>
        <ul>
            <% if (games) {%>
                <h1>All Games Currently Recorded</h1>
                <% games.forEach(g => { %>
                    <li>
                        ID: <%= g.id %> 
                        Title: <%= g.title %> 
                        Released: <%= g.formattedDate %>
                        <a href="/update/games/<%= g.id %>">Update</a>
                        <form action="/delete/games/<%= g.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this data?');">Delete</button>
                        </form>
                    </li>
                <% }); %>
            <% } %>
            <% if (genres) {%>
                <h1>All Genres Currently Recorded</h1>
                <% genres.forEach(g => { %>
                    <li>
                        ID: <%= g.id %>
                        Genre: <%= g.genre %>
                        Description: <%= g.description %>
                        <a href="/update/genres/<%= g.id %>">Update</a>
                        <form action="/delete/genres/<%= g.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this data?');">Delete</button>
                        </form>
                    </li>
                <% }); %>
            <% } %>
            <% if (developers) {%>
                <h1>All Developers Currently Recorded</h1>
                <% developers.forEach(d => { %>
                    <li>
                        ID: <%= d.id %>
                        Studio: <%= d.developer %>
                        Founded: <%= d.founded_year %>
                        <a href="/update/developers/<%= d.id %>">Update</a>
                        <form action="/delete/developers/<%= d.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this data?');">Delete</button>
                        </form>
                    </li>
                <% }); %>
            <% } %>
        </ul>
        <a href="/manage">Game List Manager</a>
    </body>
</html>